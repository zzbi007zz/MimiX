# ========================
#  Mimi Bot - Configuration
# ========================

# --- Telegram ---
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# --- AI Providers (use at least one) ---
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_GENERATIVE_AI_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# --- Primary AI Model (defaults to claude-3-5-sonnet-20241022) ---
# Examples:
#   claude-3-5-sonnet-20241022
#   gemini-2.0-flash
#   gpt-4o
AI_MODEL=claude-3-5-sonnet-20241022
AI_PROVIDER=anthropic

# --- GitHub Integration ---
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_DEFAULT_OWNER=your_github_username_or_org
GITHUB_DEFAULT_REPO=your_default_repo_name

# --- Gmail Integration ---
# Path to the credentials.json downloaded from Google Cloud Console
GMAIL_CREDENTIALS_PATH=./credentials.json
# Path to store the OAuth token (will be created automatically after first auth)
GMAIL_TOKEN_PATH=./token.json

# --- Database ---
DATABASE_PATH=./data/mimi.db

# --- Search Integration (optional, uses DuckDuckGo if not set) ---
TAVILY_API_KEY=your_tavily_api_key_here

# --- Bot Security ---
# Comma-separated list of allowed Telegram user IDs (leave empty to allow all)
ALLOWED_USER_IDS=
